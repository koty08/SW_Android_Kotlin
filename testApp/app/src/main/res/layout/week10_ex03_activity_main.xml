<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:id="@+id/posterImageView"
        android:src="@drawable/aa"/>

    <TextView
        android:id="@+id/input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="괴물" />

    <TextView
        android:id="@+id/input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-05-10 18:47:00" />

    <TextView
        android:id="@+id/input3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="봉준호" />

    <TextView
        android:id="@+id/input4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000년 어느 날, 어느 연구소에서 백 병이 넘는 발암 물질인 포름알데히드가 하수구에 버려져 서울 한강으로 흘려져갔다. 버려진 독약을 먹은 한강의 물고기는 곧 상상을 초월하는 괴생물체로 변하고 말았다." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약하기"
            android:layout_weight="1"
            android:id="@+id/doButton1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약정보보기"
            android:layout_weight="1"
            android:id="@+id/doButton2"/>
    </LinearLayout>


</LinearLayout>